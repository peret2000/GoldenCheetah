{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "(gdb) Iniciar",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/GoldenCheetah",
            "args": [],
            "stopAtEntry": true,
            "cwd": "${workspaceFolder}",
            "environment":
            [
              {"name":"PATH","value":"/home/${env:USER}/Git/qt514/bin:${env:PATH}"},
              {"name":"LD_LIBRARY_PATH","value":"/home/${env:USER}/Git/qt514/lib/x86_64-linux-gnu:/home/${env:USER}/Git/qt514/lib:/home/${env:USER}/squashfs-root/lib:${env:LD_LIBRARY_PATH}"}
            ],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Habilitar la impresión con sangría para gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        },
        {
            "name": "(gdb) Remote Launch)",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceRoot}/GoldenCheetah",
            "miDebuggerServerAddress": "localhost:9091",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceRoot}",
            "environment": [],
            "externalConsole": true,
            "linux": {
              "MIMode": "gdb"
            },
            "osx": {
              "MIMode": "gdb"
            },
            "windows": {
              "MIMode": "gdb"
            }
        }
    ]
}
